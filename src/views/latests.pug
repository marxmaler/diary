extend base.pug

block bodyBlock
    ul(style="list-style-type:none")
        each diary in diaries
            li
                h1=diary.title
                    span 
                        a(href=`/diaries/edit/${diary.id}`, style="text-decoration:none")  📝
                p=diary.createdAt
                div
                    span=diary.content
        else
            li
                h1 게시물이 없습니다.